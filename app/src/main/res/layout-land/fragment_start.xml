<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue50"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartActivityFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:text="My Nanodegree Apps!"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/spotify_streamer_button"
                style="@style/startButtonLandscapeStyle"
                android:onClick="onClick"
                android:text="Popular Movies" />

            <Button
                android:id="@+id/score_apps_button"
                style="@style/startButtonLandscapeStyle"
                android:onClick="onClick"
                android:text="Score App" />

            <Button
                android:id="@+id/library_apps_button"
                style="@style/startButtonLandscapeStyle"
                android:onClick="onClick"
                android:text="library app" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/build_it_bigger_button"
                style="@style/startButtonLandscapeStyle"
                android:onClick="onClick"
                android:text="build it bigger" />

            <Button
                android:id="@+id/xyz_reader_button"
                style="@style/startButtonLandscapeStyle"
                android:onClick="onClick"
                android:text="xyz reader" />

            <Button
                android:id="@+id/my_app_button"
                style="@style/startButtonLandscapeStyle"
                android:background="@android:color/holo_red_light"
                android:onClick="onClick"
                android:text="capstone: my own app" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
