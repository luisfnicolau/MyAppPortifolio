<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/udacityOrange</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="PopularMoviesAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/PopularMoviesColorPrimary</item>
        <item name="android:colorPrimaryDark">@color/PopularMoviesColorPrimaryDark</item>
        <item name="android:colorAccent">@color/PopularMoviesColorAccent</item>
        <item name="android:toolbarStyle">@style/PopularMoviesToolbar</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="PopularMoviesToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:popupTheme">@style/Theme.AppCompat.Light</item>
    </style>


    <style name="PopularMoviesActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/PopularMoviesColorPrimary</item>
        <item name="android:logo">@drawable/ic_local_movies</item>
    </style>


    <style name="startButtonPortraitStyle">
        <item name="android:background">@color/udacityOrange</item>
        <item name="android:layout_marginRight">80dp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="startButtonLandscapeStyle">
        <item name="android:background">@color/udacityOrange</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
