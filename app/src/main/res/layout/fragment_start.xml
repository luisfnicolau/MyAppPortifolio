<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/blue50"
    tools:context=".StartActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="My Nanodegree Apps!"
        android:layout_marginBottom="8dp"
        android:textSize="24sp" />

    <Button
        android:id="@+id/spotify_streamer_button"
        style="@style/startButtonPortraitStyle"
        android:text="Popular Movies"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/score_apps_button"
        style="@style/startButtonPortraitStyle"
        android:text="Score App"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/library_apps_button"
        style="@style/startButtonPortraitStyle"
        android:text="library app"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/build_it_bigger_button"
        style="@style/startButtonPortraitStyle"
        android:text="build it bigger"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/xyz_reader_button"
        style="@style/startButtonPortraitStyle"
        android:text="xyz reader"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/my_app_button"
        style="@style/startButtonPortraitStyle"
        android:background="@android:color/holo_red_light"
        android:text="capstone: my own app"
        android:onClick="onClick"/>

</LinearLayout>
